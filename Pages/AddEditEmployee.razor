@page "/employee/add"
@page "/employee/edit/{empID}"
@inherits AddEditEmployeeModel


<h1>@Title Curriculo</h1>
<hr />

<EditForm Model="@emp" OnValidSubmit="SaveEmployee">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label class="control-label col-md-12">Nome</label>
        <div class="col-md-4">
            <input class="form-control" @bind="emp.EmployeeName" />
        </div>
        <ValidationMessage For="@(() => emp.EmployeeName)" />
    </div>
    <div class="form-group row">
        <label class="control-label col-md-12">Gênero</label>
        <div class="col-md-4">
            <select class="form-control" @bind="emp.Gender">
                <option value="">-- Selecionar Gênero --</option>
                <option value="Masculino">Masculino</option>
                <option value="Femenino">Femenino</option>
            </select>
        </div>
        <ValidationMessage For="@(() => emp.Gender)" />
    </div>
    <div class="form-group row">
        <label class="control-label col-md-12">Função</label>
        <div class="col-md-4">
            <input class="form-control" @bind="emp.Designation" />
        </div>
        <ValidationMessage For="@(() => emp.Designation)" />
    </div>
    <div class="form-group row">
        <label class="control-label col-md-12">Cidade</label>
        <div class="col-md-4">
            <select class="form-control" @bind="emp.CityName">
                <option value="-- Select City --">-- Selecione a Cidade --</option>
                @foreach (var city in cityList)
                {
<option value="@city.CityName">@city.CityName</option>}
            </select>
        </div>
        <ValidationMessage For="@(() => emp.CityName)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Telefone</label>
        <div class="col-md-4">
            <input class="form-control" @bind="emp.Telefone" />
        </div>
        <ValidationMessage For="@(() => emp.Telefone)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Tempo</label>
        <div class="col-md-4">
            <input class="form-control" @bind="emp.Tempo" />
        </div>
        <ValidationMessage For="@(() => emp.Tempo)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Email</label>
        <div class="col-md-4">
            <input class="form-control" @bind="emp.Email" />
        </div>
        <ValidationMessage For="@(() => emp.Email)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Status</label>
        <div class="col-md-4">
            <select class="form-control" @bind="emp.Status">
                <option value="">-- Status --</option>
                <option value="Empregado(a)">Empregado(a)</option>
                <option value="Desempregado(a)">Desempregado(a)</option>
            </select>
        </div>
        <ValidationMessage For="@(() => emp.Status)" />
    </div>

    <div class="form-group row">
        <div class="col-md-2">
            <input class="control-label col-md-20" type="file" name="file" />
        </div>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <button class="btn btn-light" @onclick="Cancel">Cancelar</button>
    </div>
</EditForm>
